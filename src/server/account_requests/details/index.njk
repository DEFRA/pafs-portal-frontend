{% extends 'layouts/page.njk' %}

{% block pageTitle %}{{ title }} | {{ serviceName }}{% endblock %}

{% block content %}
  <a href="#" class="govuk-back-link">{{ __('accountRequest.back') }}</a>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      


  <h1 class="govuk-heading-xl">{{ __('accountRequest.details.heading') }}</h1>

  <p class="govuk-body">
    {{ __('accountRequest.details.introParagraph') }}
  </p>

  <div class="govuk-form-group">
    <label class="govuk-label" for="first-name">{{ __('accountRequest.details.firstNameLabel') }}</label>
    <input class="govuk-input govuk-!-width-two-thirds" id="first-name" name="firstName" type="text" spellcheck="false" autocomplete="given-name">
  </div>

  <div class="govuk-form-group">
    <label class="govuk-label" for="last-name">{{ __('accountRequest.details.lastNameLabel') }}</label>
    <input class="govuk-input govuk-!-width-two-thirds" id="last-name" name="lastName" type="text" spellcheck="false" autocomplete="family-name">
  </div>

  <div class="govuk-form-group">
    <label class="govuk-label" for="email-address">{{ __('accountRequest.details.emailAddressLabel') }}</label>
    <input class="govuk-input govuk-!-width-two-thirds" id="email-address" name="emailAddress" type="email" spellcheck="false" autocomplete="email">
  </div>

  <div class="govuk-form-group">
    <label class="govuk-label" for="telephone-number">{{ __('accountRequest.details.telephoneNumberLabel') }}</label>
    <input class="govuk-input govuk-!-width-two-thirds" id="telephone-number" name="telephoneNumber" type="tel" autocomplete="tel">
  </div>

  <div class="govuk-form-group">
    <label class="govuk-label" for="organisation">{{ __('accountRequest.details.organisationLabel') }}</label>
    <input class="govuk-input govuk-!-width-two-thirds" id="organisation" name="organisation" type="text">
  </div>

  <div class="govuk-form-group">
