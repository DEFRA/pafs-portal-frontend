{% extends 'layouts/page.njk' %}

{% block pageTitle %}{{ __('accountRequest.eaAdditionalAreas.heading') }} | {{ serviceName }}{% endblock %}

{% block content %}
  <a href="#" class="govuk-back-link">{{ __('accountRequest.back') }}</a>

  <h1 class="govuk-heading-l">{{ __('accountRequest.eaAdditionalAreas.heading') }}</h1>

  <div class="govuk-form-group">
    <fieldset class="govuk-fieldset">
      <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
        <h1 class="govuk-body">
          {{ __('accountRequest.eaAdditionalAreas.introText') }}
        </h1>
      </legend>
      <form method="post" novalidate>
        {% if returnTo %}
        <input type="hidden" name="returnTo" value="{{ returnTo }}">
        {% endif %}

        <div class="govuk-checkboxes" data-module="govuk-checkboxes">
          <div class="govuk-checkboxes__item">
            <input
              class="govuk-checkboxes__input"
              id="additional-ea-areas-1"
              name="additionalEaAreas"
              type="checkbox"
              value="wessex"
              {% if 'wessex' in (values.additionalEaAreas or []) %}checked{% endif %}
            >
            <label class="govuk-label govuk-checkboxes__label" for="additional-ea-areas-1">
              Wessex
            </label>
          </div>
          <div class="govuk-checkboxes__item">
            <input
              class="govuk-checkboxes__input"
              id="additional-ea-areas-2"
              name="additionalEaAreas"
              type="checkbox"
              value="thames"
              {% if 'thames' in (values.additionalEaAreas or []) %}checked{% endif %}
            >
            <label class="govuk-label govuk-checkboxes__label" for="additional-ea-areas-2">
              Thames
            </label>
          </div>
          <div class="govuk-checkboxes__item">
            <input
              class="govuk-checkboxes__input"
              id="additional-ea-areas-3"
              name="additionalEaAreas"
              type="checkbox"
              value="anglian"
              {% if 'anglian' in (values.additionalEaAreas or []) %}checked{% endif %}
            >
            <label class="govuk-label govuk-checkboxes__label" for="additional-ea-areas-3">
              Anglian
            </label>
          </div>
          <div class="govuk-checkboxes__item">
            <input
              class="govuk-checkboxes__input"
              id="additional-ea-areas-4"
              name="additionalEaAreas"
              type="checkbox"
              value="midlands"
              {% if 'midlands' in (values.additionalEaAreas or []) %}checked{% endif %}
            >
            <label class="govuk-label govuk-checkboxes__label" for="additional-ea-areas-4">
              Midlands
            </label>
          </div>
          <div class="govuk-checkboxes__item">
            <input
              class="govuk-checkboxes__input"
              id="additional-ea-areas-5"
              name="additionalEaAreas"
              type="checkbox"
              value="north-west"
              {% if 'north-west' in (values.additionalEaAreas or []) %}checked{% endif %}
            >
            <label class="govuk-label govuk-checkboxes__label" for="additional-ea-areas-5">
              North West
            </label>
          </div>
          <div class="govuk-checkboxes__item">
            <input
              class="govuk-checkboxes__input"
              id="additional-ea-areas-6"
              name="additionalEaAreas"
              type="checkbox"
              value="yorkshire"
              {% if 'yorkshire' in (values.additionalEaAreas or []) %}checked{% endif %}
            >
            <label class="govuk-label govuk-checkboxes__label" for="additional-ea-areas-6">
              Yorkshire
            </label>
          </div>
          <div class="govuk-checkboxes__item">
            <input
              class="govuk-checkboxes__input"
              id="additional-ea-areas-7"
              name="additionalEaAreas"
              type="checkbox"
              value="north-east"
              {% if 'north-east' in (values.additionalEaAreas or []) %}checked{% endif %}
            >
            <label class="govuk-label govuk-checkboxes__label" for="additional-ea-areas-7">
              North East
            </label>
          </div>
        </div>

        <button class="govuk-button" data-module="govuk-button">
          {{ __('accountRequest.eaAdditionalAreas.continueButton') }}
        </button>
      </form>
    </fieldset>
  </div>
{% endblock %}
