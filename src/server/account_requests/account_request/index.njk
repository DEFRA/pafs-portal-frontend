{% extends 'layouts/page.njk' %}

{% block pageTitle %}{{ t('account-request.index.heading') }} | {{ serviceName }}{% endblock %}

{% block content %}
  <h1 class="govuk-heading-xl">{{ t('account-request.index.heading') }}</h1>

  <p class="govuk-body">
    {{ t('account-request.index.introParagraph') }}
  </p>

  <h2 class="govuk-heading-m">{{ t('account-request.index.beforeYouStartHeading') }}</h2>

  <p class="govuk-body">{{ t('account-request.index.beforeYouStartIntro') }}</p>
  <ul class="govuk-list govuk-list--bullet">
    <li>{{ t('account-request.index.bullet1') }}</li>
    <li>{{ t('account-request.index.bullet2') }}</li>
    <li>{{ t('account-request.index.bullet3') }}</li>
  </ul>

  <p class="govuk-body">
    {{ t('account-request.index.reviewStatement') }}
  </p>
  <a href="/account_request/details" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
    {{ t('account-request.index.startButton') }}
    <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
      <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"/>
    </svg>
  </a>
{% endblock %}
