{% extends 'layouts/page.njk' %}

{% block pageTitle %}{{ t('account-request.checkAnswers.heading') }} | {{ serviceName }}{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
    <a href="#" class="govuk-back-link">{{ t('account-request.back') }}</a>

    <h1 class="govuk-heading-xl">{{ t('account-request.checkAnswers.heading') }}</h1>

    <div class="govuk-summary-list__row">
      <h2 class="govuk-heading-m govuk-summary-list__key">{{ t('account-request.checkAnswers.personalDetailsHeading') }}</h2>
      <dd class="govuk-summary-list__actions">
        <a class="govuk-link" href="/account_request/details?from=check-answers">
          {{ t('account-request.checkAnswers.changePersonalDetailsLink') }}<span class="govuk-visually-hidden"> {{ t('account-request.checkAnswers.personalDetailsHeading') }}</span>
        </a>
      </dd>
    </div>

    <dl class="govuk-summary-list">
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          {{ t('account-request.details.firstNameLabel') }}
        </dt>
        <dd class="govuk-summary-list__value">
          {{ details.firstName }}
        </dd>
      </div>

      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          {{ t('account-request.details.lastNameLabel') }}
        </dt>
        <dd class="govuk-summary-list__value">
          {{ details.lastName }}
        </dd>
      </div>

      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          {{ t('account-request.details.emailAddressLabel') }}
        </dt>
        <dd class="govuk-summary-list__value">
          {{ details.emailAddress }}
        </dd>
      </div>

      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          {{ t('account-request.details.telephoneNumberLabel') }}
        </dt>
        <dd class="govuk-summary-list__value">
          {{ details.telephoneNumber }}
        </dd>
      </div>

      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          {{ t('account-request.details.organisationLabel') }}
        </dt>
        <dd class="govuk-summary-list__value">
          {{ details.organisation }}
        </dd>
      </div>

      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          {{ t('account-request.details.jobTitleLabel') }}
        </dt>
        <dd class="govuk-summary-list__value">
          {{ details.jobTitle }}
        </dd>
      </div>

      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          {{ t('account-request.checkAnswers.responsibilityLabel') }}
        </dt>
        <dd class="govuk-summary-list__value">
          {{ responsibilityValue }}
        </dd>
      </div>
    </dl>

    <h2 class="govuk-heading-m">{{ t('account-request.checkAnswers.areaSelectionHeading') }}</h2>

    <dl class="govuk-summary-list">
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          {{ t('account-request.eaMainArea.mainEaAreaLabel') }}
        </dt>
        <dd class="govuk-summary-list__value">
          {{ mainEaAreaValue }}
        </dd>
        <dd class="govuk-summary-list__actions">
          <a class="govuk-link" href="/account_request/ea-main-area?from=check-answers">
            {{ t('account-request.checkAnswers.changeMainEaAreaLink') }}<span class="govuk-visually-hidden"> {{ t('account-request.eaMainArea.mainEaAreaLabel') }}</span>
          </a>
        </dd>
      </div>

      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          {{ t('account-request.eaAdditionalAreas.introText') }}
        </dt>
        <dd class="govuk-summary-list__value">
          {% for area in additionalAreasLabels %}
            {{ area }}{% if not loop.last %}<br>{% endif %}
          {% endfor %}
        </dd>
        <dd class="govuk-summary-list__actions">
          <a class="govuk-link" href="/account_request/ea-additional-areas?from=check-answers">
            {{ t('account-request.checkAnswers.changeAdditionalEaAreasLink') }}<span class="govuk-visually-hidden"> {{ t('account-request.eaAdditionalAreas.introText') }}</span>
          </a>
        </dd>
      </div>
    </dl>

    <p class="govuk-body">{{ t('account-request.checkAnswers.confirmationText') }}</p>

    <form method="post" novalidate>
      <button class="govuk-button" data-module="govuk-button">{{ t('account-request.checkAnswers.confirmAndSendButton') }}</button>
    </form>
    </div>
  </div>
{% endblock %}
