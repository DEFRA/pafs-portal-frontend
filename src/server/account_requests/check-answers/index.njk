{% extends 'layouts/page.njk' %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block pageTitle %}{{ t('account-request.checkAnswers.heading') }} | {{ serviceName }}{% endblock %}

{% block content %}
  {% if summaryData.responsibility.value == 'EA' %}
    <a href="/account_request/ea-additional-areas" class="govuk-back-link">{{ t('account-request.back') }}</a>
  {% elif summaryData.responsibility.value == 'PSO' %}
    <a href="/account_request/additional-pso-teams" class="govuk-back-link">{{ t('account-request.back') }}</a>
  {% elif summaryData.responsibility.value == 'RMA' %}
    <a href="/account_request/additional-rmas" class="govuk-back-link">{{ t('account-request.back') }}</a>
  {% else %}
    <a href="/account_request/details" class="govuk-back-link">{{ t('account-request.back') }}</a>
  {% endif %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
  <h1 class="govuk-heading-l">{{ t('account-request.checkAnswers.heading') }}</h1>

  {% if error %}
    {{ govukErrorSummary({
      titleText: "There is a problem",
      errorList: [{
        text: error,
        href: "#submit-button"
      }]
    }) }}
  {% endif %}

  <div class="govuk-summary-card">
    <div class="govuk-summary-card__title-wrapper">
      <h2 class="govuk-summary-card__title">{{ t('account-request.checkAnswers.personalDetailsHeading') }}</h2>
      <div class="govuk-summary-card__actions">
        <a class="govuk-link" href="/account_request/details?from=check-answers">
          {{ t('account-request.checkAnswers.changePersonalDetailsLink') }}<span class="govuk-visually-hidden"> personal details</span>
        </a>
      </div>
    </div>
    <div class="govuk-summary-card__content">
      <dl class="govuk-summary-list">
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">First name</dt>
          <dd class="govuk-summary-list__value">{{ summaryData.personalDetails.firstName }}</dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">Last name</dt>
          <dd class="govuk-summary-list__value">{{ summaryData.personalDetails.lastName }}</dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">Email address</dt>
          <dd class="govuk-summary-list__value">{{ summaryData.personalDetails.emailAddress }}</dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">Telephone number</dt>
          <dd class="govuk-summary-list__value">{{ summaryData.personalDetails.telephoneNumber }}</dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">Organisation</dt>
          <dd class="govuk-summary-list__value">{{ summaryData.personalDetails.organisation }}</dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">Job title</dt>
          <dd class="govuk-summary-list__value">{{ summaryData.personalDetails.jobTitle }}</dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">{{ t('account-request.checkAnswers.responsibilityLabel') }}</dt>
          <dd class="govuk-summary-list__value">{{ summaryData.responsibility.displayValue }}</dd>
        </div>
      </dl>
    </div>
  </div>

  <div class="govuk-summary-card">
    <div class="govuk-summary-card__title-wrapper">
      <h2 class="govuk-summary-card__title">{{ t('account-request.checkAnswers.areaSelectionHeading') }}</h2>
      <div class="govuk-summary-card__actions">
        {% if summaryData.responsibility.value == 'EA' %}
          <a class="govuk-link" href="/account_request/ea-main-area?from=check-answers&reset=areas">
            {{ t('account-request.checkAnswers.changeAreaSelectionLink') }}<span class="govuk-visually-hidden"> area selection</span>
          </a>
        {% elif summaryData.responsibility.value == 'PSO' %}
          <a class="govuk-link" href="/account_request/ea-area?from=check-answers&reset=areas">
            {{ t('account-request.checkAnswers.changeAreaSelectionLink') }}<span class="govuk-visually-hidden"> area selection</span>
          </a>
        {% elif summaryData.responsibility.value == 'RMA' %}
          <a class="govuk-link" href="/account_request/ea-area?from=check-answers&reset=areas">
            {{ t('account-request.checkAnswers.changeAreaSelectionLink') }}<span class="govuk-visually-hidden"> area selection</span>
          </a>
        {% endif %}
      </div>
    </div>
    <div class="govuk-summary-card__content">
      <dl class="govuk-summary-list">
    {% if summaryData.responsibility.value == 'EA' %}
      {# EA Area Programme Team flow #}
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">{{ t('account-request.checkAnswers.mainEaAreaLabel') }}</dt>
        <dd class="govuk-summary-list__value">{{ summaryData.areas.mainEaArea.name or 'Not selected' }}</dd>
      </div>
      {% if summaryData.areas.additionalEaAreas and summaryData.areas.additionalEaAreas.length > 0 %}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">{{ t('account-request.checkAnswers.additionalEaAreasLabel') }}</dt>
          <dd class="govuk-summary-list__value">{{ summaryData.areas.additionalEaAreas | join(', ') }}</dd>
        </div>
      {% endif %}
    {% elif summaryData.responsibility.value == 'PSO' %}
      {# PSO Team flow #}
      {% if summaryData.areas.eaAreas and summaryData.areas.eaAreas.length > 0 %}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">EA areas</dt>
          <dd class="govuk-summary-list__value">{{ summaryData.areas.eaAreas | join(', ') }}</dd>
        </div>
      {% endif %}
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">Main PSO area</dt>
        <dd class="govuk-summary-list__value">{{ summaryData.areas.mainPsoTeam.name or 'Not selected' }}</dd>
      </div>
      {% if summaryData.areas.additionalPsoTeams and summaryData.areas.additionalPsoTeams.length > 0 %}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">Additional PSO areas</dt>
          <dd class="govuk-summary-list__value">{{ summaryData.areas.additionalPsoTeams | join(', ') }}</dd>
        </div>
      {% endif %}
    {% elif summaryData.responsibility.value == 'RMA' %}
      {# RMA flow #}
      {% if summaryData.areas.eaAreas and summaryData.areas.eaAreas.length > 0 %}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">EA areas</dt>
          <dd class="govuk-summary-list__value">{{ summaryData.areas.eaAreas | join(', ') }}</dd>
        </div>
      {% endif %}
      {% if summaryData.areas.psoTeams and summaryData.areas.psoTeams.length > 0 %}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">PSO areas</dt>
          <dd class="govuk-summary-list__value">{{ summaryData.areas.psoTeams | join(', ') }}</dd>
        </div>
      {% endif %}
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">Main RMA area</dt>
        <dd class="govuk-summary-list__value">{{ summaryData.areas.mainRma.name or 'Not selected' }}</dd>
      </div>
      {% if summaryData.areas.additionalRmas and summaryData.areas.additionalRmas.length > 0 %}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">Additional RMA areas</dt>
          <dd class="govuk-summary-list__value">{{ summaryData.areas.additionalRmas | join(', ') }}</dd>
        </div>
      {% endif %}
    {% endif %}
      </dl>
    </div>
  </div>

  <p class="govuk-body">{{ t('account-request.checkAnswers.confirmationText') }}</p>

  <form method="post" novalidate>
    <button id="submit-button" class="govuk-button" data-module="govuk-button">
      {{ t('account-request.checkAnswers.confirmAndSendButton') }}
    </button>
  </form>
  </div>
</div>
{% endblock %}

