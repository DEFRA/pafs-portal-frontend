{% extends 'layouts/page.njk' %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block pageTitle %}{{ t('project-proposal.project_type.heading') }} | {{ serviceName }}
{% endblock %}

{% block content %}
  <a href="/project-proposal/project-name" class="govuk-back-link">{{ t('common.back_link') }}</a>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if errorSummary and(errorSummary | length) %}
        {% set errorList = [] %}
        {% for item in errorSummary %}
          {% set errorList = errorList.concat([
            {
              text: item.text,
              href: item.href
            }
          ]) %}
        {% endfor %}
        {{ govukErrorSummary({
          titleText: t('common.error_summary_title'),
          errorList: errorList
        }) }}
      {% endif %}

      {% set items = [
        {
          value: 'DEF',
          text: t('project-proposal.project_type.options.def'),
          checked: values.projectType == 'DEF'
        },
        {
          value: 'REP',
          text: t('project-proposal.project_type.options.rep'),
          checked: values.projectType == 'REP'
        },
        {
          value: 'REF',
          text: t('project-proposal.project_type.options.ref'),
          checked: values.projectType == 'REF'
        },
        {
          value: 'HCR',
          text: t('project-proposal.project_type.options.hcr'),
          checked: values.projectType == 'HCR'
        },
        {
          value: 'STR',
          text: t('project-proposal.project_type.options.str'),
          checked: values.projectType == 'STR'
        },
        {
          value: 'STU',
          text: t('project-proposal.project_type.options.stu'),
          checked: values.projectType == 'STU'
        },
        {
          value: 'ELO',
          text: t('project-proposal.project_type.options.elo'),
          checked: values.projectType == 'ELO'
        }
      ] %}

      <form method="post" novalidate>
        {% set errorMessage = null %}
        {% if errors.projectType %}
          {% set errorMessage = { text: errors.projectType } %}
        {% endif %}
        {{ govukRadios({
          idPrefix: 'project-type',
          name: 'projectType',
          fieldset: {
            legend: {
              text: t('project-proposal.project_type.heading'),
              classes: 'govuk-fieldset__legend--l'
            }
          },
          errorMessage: errorMessage,
          items: items
        }) }}

        {{ govukButton({
          text: t('common.buttons.save_and_continue')
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
