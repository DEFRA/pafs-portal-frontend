{% extends 'layouts/projects.njk' %}

{% block body %}
  <h1 class="govuk-heading-xl">{{ t(localKeyPrefix + '.heading') }}</h1>

  <p class="govuk-body">{{t(localKeyPrefix + '.intro_paragraph')}}</p>

  <h2 class="govuk-heading-m">{{t(localKeyPrefix + '.before_you_start_heading')}}</h2>

  <p class="govuk-body">{{t(localKeyPrefix + '.before_you_start_intro')}}</p>
  <a href="/project/name" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button" data-govuk-button-init="">
    {{ t('common.buttons.start_now') }}
    <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
      <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"/>
    </svg>
  </a>
{% endblock %}