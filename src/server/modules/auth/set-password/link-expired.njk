{% extends "layouts/page.njk" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">
        {{ t('auth.set_password_link_expired.heading') }}
      </h1>

      <p class="govuk-body">
        {{ t('auth.set_password_link_expired.link_expired') }}
      </p>

      <p class="govuk-body">
        {{ t('auth.set_password_link_expired.expiry_reason') }}
      </p>

      <h2 class="govuk-heading-m">
        {{ t('auth.set_password_link_expired.what_you_can_do') }}
      </h2>

      <p class="govuk-body">
        {{ t('auth.set_password_link_expired.contact_support') }}
      </p>

      <div class="govuk-inset-text">
        <p class="govuk-body">
          <strong>Email:</strong> <a href="mailto:{{ t('auth.set_password_link_expired.support_email') }}" class="govuk-link">{{ t('auth.set_password_link_expired.support_email') }}</a><br>
          {{ t('auth.set_password_link_expired.include_details') }}
        </p>
      </div>

      <p class="govuk-body govuk-!-margin-top-6">
        <a href="/login" class="govuk-link">{{ t('common.back_to_sign_in') }}</a>
      </p>

    </div>
  </div>
{% endblock %}
