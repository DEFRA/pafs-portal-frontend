{% extends "layouts/page.njk" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "govuk/components/details/macro.njk" import govukDetails %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {{ govukPanel({
        titleText: t('auth.forgot_password_confirmation.panel_title'),
        html: t('auth.forgot_password_confirmation.panel_text')
      }) }}

      <h2 class="govuk-heading-m govuk-!-margin-top-7">
        {{ t('auth.forgot_password_confirmation.what_happens_next') }}
      </h2>

      {% if email %}
        <p class="govuk-body">
          {{ t('auth.forgot_password_confirmation.email_sent_html', { email: email }) | safe }}
        </p>
      {% endif %}

      <p class="govuk-body">
        {{ t('auth.forgot_password_confirmation.link_expiry_html') | safe }}
      </p>

      {{ govukInsetText({
        html: '<h3 class="govuk-heading-s">' + t('auth.forgot_password_confirmation.if_no_email.heading') + '</h3>
        <ul class="govuk-list govuk-list--bullet govuk-!-margin-bottom-0">
          <li>' + t('auth.forgot_password_confirmation.if_no_email.check_spam') + '</li>
          <li>' + t('auth.forgot_password_confirmation.if_no_email.check_email') + '</li>
          <li>' + t('auth.forgot_password_confirmation.if_no_email.wait') + '</li>
        </ul>'
      }) }}

      {{ govukDetails({
        summaryText: t('auth.forgot_password_confirmation.need_help.summary'),
        html: t('auth.forgot_password_confirmation.need_help.content_html')
      }) }}

      <p class="govuk-body govuk-!-margin-top-8">
        <a href="/login" class="govuk-link">{{ t('common.back_to_sign_in') }}</a>
      </p>

    </div>
  </div>
{% endblock %}
